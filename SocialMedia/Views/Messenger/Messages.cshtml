@using SocialMedia.ViewModels
@model IEnumerable<FriendsNamesViewModel>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4">Your Friends</h2>

            <div class="list-group">
                @foreach (var friend in Model)
                {
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center shadow-sm mb-2">
                        <span>@friend.FriendName</span>
                        <a asp-controller="PrivateChat" asp-action="PrivateChat" asp-route-friendId="@friend.Id" class="btn btn-primary btn-sm">Message</a>
                    </a>
                }
            </div>
        </div>
    </div>
</div>







<style>
    .list-group-item {
        background-color: #f8f9fa;
        border-radius: 10px;
        transition: background-color 0.3s;
    }

        .list-group-item:hover {
            background-color: #e2e6ea;
            cursor: pointer;
        }

        .list-group-item .btn {
            font-size: 0.9rem;
        }

            .list-group-item .btn:hover {
                background-color: #0056b3;
            }

    h2 {
        font-family: 'Arial', sans-serif;
        font-weight: 600;
        color: #343a40;
    }
</style>
